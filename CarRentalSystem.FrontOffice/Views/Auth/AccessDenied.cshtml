@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm border-warning mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="bi bi-shield-lock-fill text-warning" style="font-size: 4rem;"></i>
            </div>

            <h1 class="h2 mb-3 text-warning">Access Denied</h1>
            
            <p class="lead text-muted mb-4">
                You do not have permission to access this resource.
            </p>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">Return Home</a>
                <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary px-4">Switch Account</a>
            </div>
        </div>
    </div>
</div>

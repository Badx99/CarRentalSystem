@{
    ViewData["Title"] = "Access Denied";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center animate-fade-in">
                <div class="mb-4">
                    <i class="fas fa-ban fa-5x text-danger opacity-50"></i>
                </div>
                <h1 class="display-4 fw-bold text-danger mb-3">Access Denied</h1>
                <p class="lead text-muted mb-5">Sorry, you don't have permission to access this page. Please contact support if you believe this is an error.</p>
                
                <div class="d-flex justify-content-center gap-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-purple btn-lg px-4 rounded-pill shadow-purple">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-purple btn-lg px-4 rounded-pill">
                        <i class="fas fa-sign-in-alt me-2"></i>Sign In
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

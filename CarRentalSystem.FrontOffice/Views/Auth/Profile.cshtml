@model CarRentalSystem.FrontOffice.Models.DTOs.CurrentUserResponse
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">My Profile</h4>
                    <span class="badge bg-light text-primary">Customer</span>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="bg-secondary rounded-circle d-inline-flex justify-content-center align-items-center text-white" style="width: 80px; height: 80px; font-size: 2rem;">
                            @(Model.FullName.Length > 0 ? Model.FullName.Substring(0, 1) : "U")
                        </div>
                        <h3 class="mt-2">@Model.FullName</h3>
                        <p class="text-muted">@Model.Email</p>
                    </div>

                    <hr />

                    <form>
                        <fieldset disabled>
                             <div class="row mb-3">
                                <label class="col-sm-3 col-form-label fw-bold">Customer ID</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control-plaintext" value="@Model.Id">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label class="col-sm-3 col-form-label fw-bold">Role</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control-plaintext" value="Customer">
                                </div>
                            </div>
                        </fieldset>
                    </form>

                    <div class="alert alert-info mt-3">
                        <i class="bi bi-info-circle"></i> To update your profile details or change password, please contact support.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

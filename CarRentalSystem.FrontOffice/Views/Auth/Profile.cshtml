@using CarRentalSystem.FrontOffice.Services
@model CustomerDetailsDto
@{
    ViewData["Title"] = "My Profile";
}

<div class="bg-purple text-light py-5 mb-5 shadow-sm">
    <div class="container text-center animate-fade-in">
        <h1 class="display-4 fw-bold mb-3"><i class="fas fa-user-circle me-3 text-white"></i>My Profile</h1>
        <p class="lead mb-0">Manage your personal information and account settings.</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <!-- Dashboard Sidebar -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm rounded-4 text-center p-4 sticky-top" style="top: 100px;">
                <div class="mb-4 d-flex justify-content-center">
                    <div class="rounded-circle bg-purple text-white d-flex align-items-center justify-content-center shadow-lg" style="width: 80px; height: 80px; font-size: 2rem;">
                         <i class="fas fa-user"></i>
                    </div>
                </div>
                <h5 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h5>
                <p class="text-muted small mb-4">@Model.Email</p>
                <div class="d-grid gap-2">
                    <a asp-controller="Auth" asp-action="Profile" class="btn btn-purple btn-sm rounded-pill active"><i class="fas fa-user-edit me-2"></i>Edit Profile</a>
                    <a asp-controller="Reservations" asp-action="MyReservations" class="btn btn-outline-purple btn-sm rounded-pill"><i class="fas fa-calendar-check me-2"></i>My Bookings</a>
                </div>
            </div>
        </div>

        <!-- Profile Content -->
        <div class="col-lg-9">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white p-4 border-bottom">
                    <h5 class="fw-bold mb-0 text-purple">Personal Information</h5>
                </div>
                <div class="card-body p-4 p-lg-5">
                    <form asp-action="Profile" method="post" id="profileForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />
                        
                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label fw-bold small text-uppercase">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                    <input asp-for="FirstName" class="form-control border-0 bg-light py-2" required />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label fw-bold small text-uppercase">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                    <input asp-for="LastName" class="form-control border-0 bg-light py-2" required />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small text-uppercase">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-muted"></i></span>
                                    <input asp-for="Email" class="form-control border-0 bg-light py-2" disabled />
                                </div>
                                <small class="text-muted">Email cannot be changed.</small>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small text-uppercase">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-phone text-muted"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control border-0 bg-light py-2" required />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Address" class="form-label fw-bold small text-uppercase">Residential Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-map-marker-alt text-muted"></i></span>
                                    <textarea asp-for="Address" class="form-control border-0 bg-light py-2" rows="2" required></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LicenseNumber" class="form-label fw-bold small text-uppercase">Driver's License Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-id-card text-muted"></i></span>
                                    <input asp-for="LicenseNumber" class="form-control border-0 bg-light py-2" required />
                                </div>
                                <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold small text-uppercase">Date of Birth</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-birthday-cake text-muted"></i></span>
                                    <input type="text" class="form-control border-0 bg-light py-2" value="@Model.DateOfBirth.ToString("MMM dd, yyyy")" disabled />
                                </div>
                                <small class="text-muted">Age: @Model.Age years</small>
                            </div>
                        </div>

                        <hr class="my-5">

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-purple btn-lg px-5 rounded-pill shadow-purple">
                                <i class="fas fa-save me-2"></i>Update Profile
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

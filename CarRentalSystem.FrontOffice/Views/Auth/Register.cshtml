@using CarRentalSystem.FrontOffice.Models.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center mb-5 animate-fade-in">
                    <div class="mb-4">
                        <i class="fas fa-user-plus fa-3x text-purple"></i>
                    </div>
                    <h1 class="display-6 fw-bold">Join LuxeDrive</h1>
                    <p class="text-muted">Create your account and start your premium journey</p>
                </div>

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate-fade-in">
                    <div class="card-body p-4 p-lg-5">
                        <form asp-action="Register" method="post" id="registerForm">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert"></div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="FirstName" class="form-label fw-bold small text-uppercase">First Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                        <input asp-for="FirstName" class="form-control border-0 bg-light py-2" placeholder="John" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LastName" class="form-label fw-bold small text-uppercase">Last Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-user text-muted"></i></span>
                                        <input asp-for="LastName" class="form-control border-0 bg-light py-2" placeholder="Doe" />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="Email" class="form-label fw-bold small text-uppercase">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-envelope text-muted"></i></span>
                                    <input asp-for="Email" class="form-control border-0 bg-light py-2" placeholder="you@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="row g-3 mt-1">
                                <div class="col-md-6">
                                    <label asp-for="Password" class="form-label fw-bold small text-uppercase">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-lock text-muted"></i></span>
                                        <input asp-for="Password" type="password" class="form-control border-0 bg-light py-2" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label fw-bold small text-uppercase">Confirm Password</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-lock text-muted"></i></span>
                                        <input asp-for="ConfirmPassword" type="password" class="form-control border-0 bg-light py-2" placeholder="••••••••" />
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <hr class="my-4">

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label asp-for="DateOfBirth" class="form-label fw-bold small text-uppercase">Date of Birth</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-birthday-cake text-muted"></i></span>
                                        <input asp-for="DateOfBirth" type="date" class="form-control border-0 bg-light py-2" />
                                    </div>
                                    <span asp-validation-for="DateOfBirth" class="text-danger small"></span>
                                    <small class="text-muted">Must be 18+ years old</small>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="LicenseNumber" class="form-label fw-bold small text-uppercase">Driver's License</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light border-0"><i class="fas fa-id-card text-muted"></i></span>
                                        <input asp-for="LicenseNumber" class="form-control border-0 bg-light py-2" placeholder="DL12345678" />
                                    </div>
                                    <span asp-validation-for="LicenseNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mt-3">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small text-uppercase">Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0"><i class="fas fa-phone text-muted"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control border-0 bg-light py-2" placeholder="+1 234 567 8900" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>

                            <div class="mt-3">
                                <label asp-for="Address" class="form-label fw-bold small text-uppercase">Residential Address</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 align-self-start pt-2"><i class="fas fa-map-marker-alt text-muted"></i></span>
                                    <textarea asp-for="Address" class="form-control border-0 bg-light py-2" rows="2" placeholder="123 Main Street, City"></textarea>
                                </div>
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>

                            <div class="form-check mt-4">
                                <input class="form-check-input" type="checkbox" id="agreeTerms" required>
                                <label class="form-check-label small" for="agreeTerms">
                                    I agree to the <a href="#" class="text-purple">Terms of Service</a> and <a href="#" class="text-purple">Privacy Policy</a>
                                </label>
                            </div>

                            <button type="submit" class="btn btn-purple w-100 btn-lg py-3 mt-4 shadow-purple rounded-pill">
                                <i class="fas fa-user-plus me-2"></i>Create Account
                            </button>

                            <div class="text-center mt-4">
                                <p class="text-muted mb-0">Already have an account? <a asp-action="Login" class="text-purple fw-bold text-decoration-none">Sign In</a></p>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-4 animate-fade-in">
                    <a asp-controller="Home" asp-action="Index" class="text-muted text-decoration-none small">
                        <i class="fas fa-arrow-left me-1"></i>Back to Home
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

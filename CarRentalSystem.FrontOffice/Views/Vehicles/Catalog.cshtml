@using CarRentalSystem.FrontOffice.Models.ViewModels
@model VehicleCatalogViewModel
@{
    ViewData["Title"] = "Catalog";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-5">Browse Vehicles</h1>
        <p class="text-muted">Find the perfect car for your next adventure</p>
    </div>
</div>

<div class="row">
    <!-- Filter Sidebar -->
    <div class="col-md-3 mb-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
            </div>
            <div class="card-body">
                <form asp-action="Catalog" method="get">
                    <div class="mb-3">
                        <label class="form-label">Search</label>
                        <input type="text" name="search" class="form-control" value="@Model.SearchTerm" placeholder="Brand or Model...">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Vehicle Type</label>
                        <select name="vehicleTypeId" class="form-select">
                            <option value="">All Types</option>
                            @foreach (var type in Model.VehicleTypes)
                            {
                                <option value="@type.Id" selected="@(Model.SelectedVehicleTypeId == type.Id)">@type.Name</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Min Price ($)</label>
                        <input type="number" name="minPrice" class="form-control" value="@Model.MinPrice" step="1" min="0">
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Max Price ($)</label>
                        <input type="number" name="maxPrice" class="form-control" value="@Model.MaxPrice" step="1" min="0">
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                    <a asp-action="Catalog" class="btn btn-outline-secondary w-100 mt-2">Clear Filters</a>
                </form>
            </div>
        </div>
    </div>

    <!-- Vehicle Grid -->
    <div class="col-md-9">
        @if (Model.Vehicles.Items.Any())
        {
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @foreach (var vehicle in Model.Vehicles.Items)
                {
                    <div class="col">
                        <div class="vehicle-card h-100">
                            <img src="@(vehicle.ImageUrl ?? "https://via.placeholder.com/400x250?text=Car+Image")" class="card-img-top" alt="@vehicle.Brand @vehicle.Model">
                            <div class="vehicle-card-body d-flex flex-column h-100">
                                <div class="mb-2">
                                    <span class="badge bg-info text-dark">@vehicle.VehicleTypeName</span>
                                    <span class="badge @(vehicle.Status == "Available" ? "bg-success" : "bg-warning text-dark") float-end">@vehicle.Status</span>
                                </div>
                                <h5 class="card-title">@vehicle.Brand @vehicle.Model</h5>
                                <p class="card-text text-muted mb-2">@vehicle.Year â€¢ @vehicle.Color</p>
                                <p class="card-text small mb-3">
                                    <i class="bi bi-people-fill"></i> @vehicle.PassengerCapacity seats &nbsp;|&nbsp; 
                                    <i class="bi bi-speedometer"></i> @vehicle.Mileage km
                                </p>
                                
                                <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
                                    <span class="h5 mb-0 text-primary">$@vehicle.DailyRate<small class="text-muted fs-6">/day</small></span>
                                    <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <nav class="mt-4" aria-label="Catalog pagination">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(!Model.Vehicles.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage - 1)" asp-route-search="@Model.SearchTerm" asp-route-vehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">Previous</a>
                    </li>
                    
                    @for (int i = 1; i <= Model.Vehicles.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-route-page="@i" asp-route-search="@Model.SearchTerm" asp-route-vehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">@i</a>
                        </li>
                    }
                    
                    <li class="page-item @(!Model.Vehicles.HasNextPage ? "disabled" : "")">
                        <a class="page-link" asp-route-page="@(Model.CurrentPage + 1)" asp-route-search="@Model.SearchTerm" asp-route-vehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">Next</a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <div class="alert alert-info text-center">
                <h4>No vehicles found</h4>
                <p>Try adjusting your search criteria.</p>
            </div>
        }
    </div>
</div>

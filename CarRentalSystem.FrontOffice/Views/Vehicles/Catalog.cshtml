@model CarRentalSystem.FrontOffice.Models.ViewModels.VehicleCatalogViewModel
@{
    ViewData["Title"] = "Our Fleet";
}

<div class="bg-purple text-light py-5 mb-5 shadow-sm">
    <div class="container text-center animate-fade-in">
        <h1 class="display-4 fw-bold mb-3">Explore Our <span class="text-white">Premium</span> Fleet</h1>
        <p class="lead mb-0">From luxurious sedans to adventurous SUVs, find your perfect match.</p>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-4">
        <!-- Sidebar Filters -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-4"><i class="fas fa-filter text-purple me-2"></i>Filters</h5>
                    
                    <form asp-action="Catalog" asp-controller="Vehicles" method="get" id="filterForm">
                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Search</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="fas fa-search text-muted"></i></span>
                                <input type="text" name="search" value="@Model.SearchTerm" class="form-control border-start-0" placeholder="Brand or model..." id="searchInput">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Availability</label>
                            <div class="mb-2">
                                <label class="form-label small text-muted">Pick-up Date</label>
                                <input type="date" name="StartDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" class="form-control form-control-sm" min="@DateTime.Today.ToString("yyyy-MM-dd")">
                            </div>
                            <div>
                                <label class="form-label small text-muted">Return Date</label>
                                <input type="date" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" class="form-control form-control-sm" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Vehicle Type</label>
                            <select name="VehicleTypeId" class="form-select category-filter p-2">
                                <option value="">All Categories</option>
                                @foreach (var type in Model.VehicleTypes)
                                {
                                    <option value="@type.Id" selected="@(type.Id == Model.SelectedVehicleTypeId)">@type.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-uppercase">Price Range</label>
                            <div class="d-flex align-items-center gap-2">
                                <input type="number" name="MinPrice" value="@Model.MinPrice" class="form-control form-control-sm" placeholder="Min">
                                <span>-</span>
                                <input type="number" name="MaxPrice" value="@Model.MaxPrice" class="form-control form-control-sm" placeholder="Max">
                            </div>
                        </div>

                        <button type="submit" class="btn btn-purple w-100 mb-2">Apply Filters</button>
                        <a asp-action="Catalog" class="btn btn-light-purple w-100">Reset</a>
                    </form>
                </div>
            </div>
        </div>

        <!-- Vehicle Grid -->
        <div class="col-lg-9">
            <div class="d-flex justify-content-between align-items-center mb-4 fade-in-on-scroll">
                <p class="mb-0 text-muted">Showing <strong>@Model.Vehicles.Items.Count()</strong> of <strong>@Model.Vehicles.TotalCount</strong> vehicles</p>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-outline-purple active"><i class="fas fa-th-large"></i></button>
                    <button class="btn btn-sm btn-outline-purple"><i class="fas fa-list"></i></button>
                </div>
            </div>

            <div class="row g-4">
                @if (Model.Vehicles.Items.Count() == 0)
                {
                    <div class="col-12 text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-car-side fa-4x text-muted opacity-25"></i>
                        </div>
                        <h3 class="fw-bold">No vehicles found</h3>
                        <p class="text-muted">Try adjusting your filters to find more options.</p>
                        <a asp-action="Catalog" class="btn btn-purple mt-3">View All Vehicles</a>
                    </div>
                }
                else
                {
                    @foreach (var vehicle in Model.Vehicles.Items)
                    {
                        <div class="col-md-6 col-xl-4 fade-in-on-scroll">
                            <div class="card h-100 border-0 shadow-sm hover-lift vehicle-card">
                                <div class="position-relative">
                                    <img src="@(string.IsNullOrEmpty(vehicle.ImageUrl) ? "/images/placeholder-car.jpg" : vehicle.ImageUrl)" class="card-img-top vehicle-image" alt="@vehicle.Brand @vehicle.Model" onerror="this.src='/images/placeholder-car.jpg'">
                                    <div class="position-absolute top-0 end-0 m-3">
                                        <span class="badge @(vehicle.Status == "Available" ? "bg-success" : "bg-danger") shadow-sm">
                                            @vehicle.Status
                                        </span>
                                    </div>
                                    @if(vehicle.VehicleTypeName != null)
                                    {
                                        <div class="position-absolute bottom-0 start-0 m-3">
                                            <span class="badge bg-purple shadow-sm">@vehicle.VehicleTypeName</span>
                                        </div>
                                    }
                                </div>
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title fw-bold mb-0">@vehicle.Brand @vehicle.Model</h5>
                                        <span class="text-muted small">@vehicle.Year</span>
                                    </div>
                                    
                                    <div class="d-flex gap-3 mb-4 text-muted small">
                                        <span><i class="fas fa-user text-purple me-1"></i> @vehicle.PassengerCapacity Seats</span>
                                        <span><i class="fas fa-tachometer-alt text-purple me-1"></i> @vehicle.Mileage km</span>
                                    </div>

                                    <div class="d-flex justify-content-between align-items-center mt-auto">
                                        <div>
                                            <span class="display-6 fw-bold text-purple">$@vehicle.DailyRate.ToString("N0")</span>
                                            <span class="text-muted small">/Day</span>
                                        </div>
                                        @if (vehicle.Status == "Available")
                                        {
                                            <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-purple shadow-sm">Details</a>
                                        }
                                        else
                                        {
                                            <a asp-action="Details" asp-route-id="@vehicle.Id" class="btn btn-outline-secondary shadow-sm">View Only</a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>

            <!-- Pagination -->
            @if (Model.Vehicles.TotalPages > 1)
            {
                <nav class="mt-5 fade-in-on-scroll">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link shadow-sm border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" asp-action="Catalog" asp-route-Page="@(Model.CurrentPage - 1)" asp-route-SearchTerm="@Model.SearchTerm" asp-route-VehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-MinPrice="@Model.MinPrice" asp-route-MaxPrice="@Model.MaxPrice">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                        
                        @for (int i = 1; i <= Model.Vehicles.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link shadow-sm border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center @(Model.CurrentPage == i ? "bg-purple text-white" : "text-dark bg-white")" style="width: 40px; height: 40px;" asp-action="Catalog" asp-route-Page="@i" asp-route-SearchTerm="@Model.SearchTerm" asp-route-VehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-MinPrice="@Model.MinPrice" asp-route-MaxPrice="@Model.MaxPrice">@i</a>
                            </li>
                        }

                        <li class="page-item @(Model.CurrentPage == Model.Vehicles.TotalPages ? "disabled" : "")">
                            <a class="page-link shadow-sm border-0 rounded-circle mx-1 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;" asp-action="Catalog" asp-route-Page="@(Model.CurrentPage + 1)" asp-route-SearchTerm="@Model.SearchTerm" asp-route-VehicleTypeId="@Model.SelectedVehicleTypeId" asp-route-MinPrice="@Model.MinPrice" asp-route-MaxPrice="@Model.MaxPrice">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/filters.js" asp-append-version="true"></script>
}

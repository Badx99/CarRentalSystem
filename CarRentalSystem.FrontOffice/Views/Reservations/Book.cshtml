@using CarRentalSystem.FrontOffice.Models.ViewModels
@model BookingViewModel
@{
    ViewData["Title"] = "Confirm Booking";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-shield-lock"></i> Secure Review & Book</h3>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="@(Model.Vehicle.ImageUrl ?? "https://via.placeholder.com/200")" class="img-fluid rounded border" alt="Car">
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.Vehicle.Brand @Model.Vehicle.Model</h4>
                            <p class="text-muted">@Model.Vehicle.Year â€¢ @Model.Vehicle.VehicleTypeName</p>
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> Free cancellation (up to 24h)</li>
                                <li><i class="bi bi-check-circle text-success"></i> Instant confirmation</li>
                            </ul>
                        </div>
                    </div>

                    <hr />

                    <form asp-action="Book" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Vehicle.Id" />
                        <input type="hidden" asp-for="StartDate" />
                        <input type="hidden" asp-for="EndDate" />
                        
                        <div class="row mb-4">
                            <div class="col-md-6 border-end">
                                <h5 class="text-primary mb-3">Rental Details</h5>
                                <div class="mb-2">
                                    <strong>Pick-up:</strong>
                                    <div class="text-muted">@Model.StartDate.ToString("dddd, MMMM dd, yyyy")</div>
                                </div>
                                <div class="mb-2">
                                    <strong>Return:</strong>
                                    <div class="text-muted">@Model.EndDate.ToString("dddd, MMMM dd, yyyy")</div>
                                </div>
                                <div>
                                    <strong>Duration:</strong>
                                    <span>@Model.RentalDays days</span>
                                </div>
                            </div>
                            <div class="col-md-6 ps-md-4">
                                <h5 class="text-primary mb-3">Price Breakdown</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Daily Rate</span>
                                    <span>$@Model.DailyRate.ToString("N2")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Days</span>
                                    <span>x @Model.RentalDays</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between fs-4 fw-bold">
                                    <span>Total</span>
                                    <span class="text-success">$@Model.TotalAmount.ToString("N2")</span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label">Special Requests (Optional)</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any specific requirements..."></textarea>
                        </div>

                        <div class="d-flex gap-3">
                            <a asp-controller="Vehicles" asp-action="Details" asp-route-id="@Model.Vehicle.Id" class="btn btn-outline-secondary btn-lg px-4">Go Back</a>
                            <button type="submit" class="btn btn-success btn-lg px-5 flex-grow-1">Confirm Booking</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

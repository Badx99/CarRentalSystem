@using CarRentalSystem.FrontOffice.Models.DTOs
@model ReservationDetailDto
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden animate-fade-in">
                <div class="card-body p-0">
                    <div class="bg-success text-white text-center py-5">
                        <div class="mb-4">
                            <i class="fas fa-check-circle fa-5x"></i>
                        </div>
                        <h1 class="fw-bold display-5 mb-2">Booking Confirmed!</h1>
                        <p class="lead mb-0 opacity-75">Thank you, @Model.CustomerName! Your journey starts here.</p>
                    </div>

                    <div class="p-4 p-lg-5">
                        <div class="row g-4 mb-5">
                            <div class="col-md-7">
                                <h5 class="fw-bold mb-4 text-purple">Reservation Summary</h5>
                                <div class="table-responsive">
                                    <table class="table table-borderless align-middle">
                                        <tbody>
                                            <tr class="border-bottom">
                                                <th class="py-3 text-muted small text-uppercase">Reservation ID</th>
                                                <td class="py-3 fw-bold">#@Model.Id.ToString().Substring(0, 8).ToUpper()</td>
                                            </tr>
                                            <tr class="border-bottom">
                                                <th class="py-3 text-muted small text-uppercase">Vehicle</th>
                                                <td class="py-3">
                                                    <div class="fw-bold">@Model.VehicleBrand @Model.VehicleModel</div>
                                                    <div class="small text-muted">@Model.VehicleTypeName â€¢ @Model.VehicleLicensePlate</div>
                                                </td>
                                            </tr>
                                            <tr class="border-bottom">
                                                <th class="py-3 text-muted small text-uppercase">Dates</th>
                                                <td class="py-3">
                                                    <div class="fw-bold">@Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")</div>
                                                    <div class="small text-muted">@Model.RentalDays Days Total</div>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th class="py-3 text-muted small text-uppercase">Total Amount</th>
                                                <td class="py-3 fw-bold text-success fs-4">$@Model.TotalAmount.ToString("N2")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-5 text-center border-start d-flex flex-column align-items-center justify-content-center">
                                <h6 class="fw-bold mb-3 text-purple text-uppercase">Your QR Code</h6>
                                @if (!string.IsNullOrEmpty(Model.QRCode))
                                {
                                    <div class="p-3 bg-white shadow-sm border rounded-4 mb-3">
                                        <img src="data:image/png;base64,@Model.QRCode" alt="Reservation QR Code" style="width: 150px; height: 150px;">
                                    </div>
                                    <p class="small text-muted px-4">Show this QR code to the counter staff for quick check-in.</p>
                                }
                                else
                                {
                                    <div class="p-4 bg-light rounded-4 mb-3">
                                        <i class="fas fa-qrcode fa-4x text-muted opacity-25"></i>
                                    </div>
                                    <p class="small text-muted">QR code will be available shortly.</p>
                                }
                            </div>
                        </div>

                        <div class="alert alert-info border-0 rounded-4 p-4 d-flex align-items-center mb-5">
                            <i class="fas fa-envelope-open-text fa-2x text-purple me-4 opacity-50"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Confirmation Email Sent</h6>
                                <p class="small mb-0 opacity-75">We've sent the booking details and instructions to <strong>@Model.CustomerEmail</strong>.</p>
                            </div>
                        </div>

                        <div class="d-flex flex-wrap gap-3">
                            <button type="button" class="btn btn-purple btn-lg px-4 shadow-purple flex-grow-1" onclick="downloadReceipt('@Model.Id')">
                                <i class="fas fa-file-pdf me-2"></i>Download Receipt
                            </button>
                            <a asp-action="MyReservations" class="btn btn-outline-purple btn-lg px-4 flex-grow-1">
                                <i class="fas fa-list-ul me-2"></i>View My History
                            </a>
                            <a asp-controller="Vehicles" asp-action="Catalog" class="btn btn-light btn-lg px-4 flex-grow-1">
                                <i class="fas fa-car-side me-2"></i>Browse More
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

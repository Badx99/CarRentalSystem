@using CarRentalSystem.FrontOffice.Models.ViewModels
@model ReservationDetailViewModel
@{
    ViewData["Title"] = "Reservation Details";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>Reservation <small class="text-muted">#@Model.Reservation.Id</small></h2>
        </div>
        <div class="col-md-4 text-end">
            <span class="badge bg-primary fs-5">@Model.Reservation.Status</span>
        </div>
    </div>

    <div class="row">
        <!-- Main Details -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-car-front"></i> Vehicle Information</h5>
                </div>
                <div class="card-body d-flex">
                    <div class="me-4">
                         <img src="@(Model.Reservation.VehicleImageUrl ?? "https://via.placeholder.com/150")" class="img-thumbnail" style="width: 150px; height: 100px; object-fit: cover;" alt="Vehicle">
                    </div>
                    <div>
                        <h4>@Model.Reservation.VehicleBrand @Model.Reservation.VehicleModel</h4>
                        <p class="text-muted mb-1">Type: @Model.Reservation.VehicleTypeName</p>
                        <p class="mb-0">License Plate: <span class="fw-bold">@Model.Reservation.VehicleLicensePlate</span></p>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-calendar-range"></i> Rental Period</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-5">
                            <p class="text-muted mb-1">Pick-up</p>
                            <h5>@Model.Reservation.StartDate.ToString("dddd, MMMM dd, yyyy")</h5>
                        </div>
                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            <i class="bi bi-arrow-right fs-4 text-primary"></i>
                        </div>
                        <div class="col-md-5">
                            <p class="text-muted mb-1">Return</p>
                            <h5>@Model.Reservation.EndDate.ToString("dddd, MMMM dd, yyyy")</h5>
                        </div>
                    </div>
                </div>
            </div>
            
             @if (!string.IsNullOrEmpty(Model.Reservation.Notes))
            {
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-sticky"></i> Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Reservation.Notes</p>
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Payment Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                         <span>Rate per day</span>
                         <span>$@((Model.Reservation.TotalAmount / Math.Max(1, Model.Reservation.RentalDays)).ToString("N2"))</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                         <span>Duration</span>
                         <span>@Model.Reservation.RentalDays days</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fs-4 fw-bold text-success mb-3">
                         <span>Total</span>
                         <span>$@Model.Reservation.TotalAmount</span>
                    </div>

                    @if (Model.CanDownloadReceipt)
                    {
                        <a asp-action="DownloadReceipt" asp-route-id="@Model.Reservation.Id" class="btn btn-outline-primary w-100 mb-2">
                             <i class="bi bi-download"></i> Download Receipt
                        </a>
                    }
                </div>
            </div>

            @if (Model.CanCancel)
            {
                <div class="card shadow-sm border-danger">
                    <div class="card-body">
                        <h5 class="text-danger">Manage Reservation</h5>
                        <p class="small text-muted">Cancellation is possible up to 24 hours before pick-up.</p>
                        <form asp-action="Cancel" asp-route-id="@Model.Reservation.Id" method="post" onsubmit="return confirm('Are you sure you want to cancel this reservation? This action cannot be undone.');">
                             @Html.AntiForgeryToken()
                             <button type="submit" class="btn btn-danger w-100">Cancel Reservation</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@using CarRentalSystem.FrontOffice.Models.ViewModels
@model ReservationDetailViewModel
@{
    ViewData["Title"] = $"Reservation #{Model.Reservation.Id.ToString().Substring(0, 8).ToUpper()}";
}

<div class="bg-purple text-light py-5 mb-5 shadow-sm">
    <div class="container d-flex justify-content-between align-items-center animate-fade-in">
        <div>
            <h1 class="display-4 fw-bold mb-0">Reservation Details</h1>
            <p class="lead mb-0 opacity-75">Tracking your journey #@Model.Reservation.Id.ToString().Substring(0, 8).ToUpper()</p>
        </div>
        <div>
             <span class="badge @(Model.Reservation.Status == "Pending" ? "bg-warning" : Model.Reservation.Status == "Confirmed" ? "bg-success" : "bg-info") fs-4 px-4 py-2 rounded-pill shadow">@Model.Reservation.Status</span>
        </div>
    </div>
</div>

<div class="container mb-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-purple">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="MyReservations" class="text-purple">My Bookings</a></li>
            <li class="breadcrumb-item active">#@Model.Reservation.Id.ToString().Substring(0, 8).ToUpper()</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <h5 class="fw-bold mb-0"><i class="fas fa-car text-purple me-2"></i>Vehicle Information</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="row align-items-center">
                        <div class="col-md-5">
                            <img src="@(string.IsNullOrEmpty(Model.Reservation.VehicleImageUrl) ? "/images/placeholder-car.jpg" : Model.Reservation.VehicleImageUrl)" 
                                 class="img-fluid rounded-4 shadow-sm" 
                                 alt="Vehicle"
                                 onerror="this.src='/images/placeholder-car.jpg'">
                        </div>
                        <div class="col-md-7 ps-md-4">
                            <h3 class="fw-bold mb-2">@Model.Reservation.VehicleBrand @Model.Reservation.VehicleModel</h3>
                            <div class="d-flex flex-wrap gap-2 mb-3">
                                <span class="badge bg-light text-purple border">@Model.Reservation.VehicleTypeName</span>
                                <span class="badge bg-light text-muted border">Plate: @Model.Reservation.VehicleLicensePlate</span>
                            </div>
                            <p class="text-muted small mb-0">Premium quality vehicle with all necessary features for a comfortable ride.</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white p-4 border-bottom-0">
                    <h5 class="fw-bold mb-0"><i class="fas fa-calendar-alt text-purple me-2"></i>Rental Period</h5>
                </div>
                <div class="card-body p-4 pt-0">
                    <div class="row g-4 text-center py-3 bg-light rounded-4">
                        <div class="col-md-5">
                            <small class="text-muted d-block text-uppercase fw-bold mb-2">Pick-up</small>
                            <h5 class="fw-bold mb-1">@Model.Reservation.StartDate.ToString("dddd")</h5>
                            <div class="h4 fw-bold text-purple mb-0">@Model.Reservation.StartDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            <div class="rounded-circle bg-white shadow-sm d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                <i class="fas fa-long-arrow-alt-right text-purple fa-lg"></i>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <small class="text-muted d-block text-uppercase fw-bold mb-2">Return</small>
                            <h5 class="fw-bold mb-1">@Model.Reservation.EndDate.ToString("dddd")</h5>
                            <div class="h4 fw-bold text-purple mb-0">@Model.Reservation.EndDate.ToString("MMM dd, yyyy")</div>
                        </div>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Reservation.Notes))
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-header bg-white p-4 border-bottom-0">
                        <h5 class="fw-bold mb-0"><i class="fas fa-sticky-note text-purple me-2"></i>Special Requests</h5>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <div class="p-3 bg-light rounded-3 italic">
                            "@Model.Reservation.Notes"
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
                <div class="card-header bg-purple text-white p-4 border-bottom-0">
                    <h5 class="fw-bold mb-0">Payment Summary</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between mb-3">
                         <span class="text-muted">Rental Days</span>
                         <span class="fw-bold">@Model.Reservation.RentalDays Days</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3 text-success">
                         <span class="fw-bold">Total Amount</span>
                         <span class="fw-bold fs-3">$@Model.Reservation.TotalAmount.ToString("N2")</span>
                    </div>
                    
                    <hr class="my-4">
                    
                    @if (!string.IsNullOrEmpty(Model.Reservation.QRCode))
                    {
                        <div class="text-center mb-4 p-3 bg-light rounded-4">
                            <h6 class="fw-bold mb-3 small text-uppercase">Check-in QR Code</h6>
                            <img src="data:image/png;base64,@Model.Reservation.QRCode" alt="QR Code" class="img-fluid rounded shadow-sm bg-white p-2" style="width: 150px;">
                            <p class="small text-muted mt-3 mb-0">ID: #@Model.Reservation.Id.ToString().Substring(0, 8).ToUpper()</p>
                        </div>
                    }

                    @if (Model.CanDownloadReceipt)
                    {
                        <button type="button" class="btn btn-purple w-100 btn-lg rounded-pill mb-3 shadow-purple" onclick="downloadReceipt('@Model.Reservation.Id')">
                             <i class="fas fa-file-pdf me-2"></i>Download Receipt
                        </button>
                    }
                </div>
            </div>

            @if (Model.CanCancel)
            {
                <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
                    <div class="card-body p-4">
                        <h5 class="fw-bold text-danger mb-3">Need to Change?</h5>
                        <p class="small text-muted mb-4">You can cancel this reservation as it is still pending. This action is irreversible.</p>
                        <form asp-action="Cancel" asp-route-id="@Model.Reservation.Id" method="post" id="cancelForm">
                             @Html.AntiForgeryToken()
                             <button type="submit" class="btn btn-outline-danger w-100 rounded-pill">Cancel Reservation</button>
                        </form>
                    </div>
                </div>
            }
            
            <a asp-action="MyReservations" class="btn btn-link text-purple w-100 text-decoration-none fw-bold">
                <i class="fas fa-chevron-left me-2"></i>Back to My Bookings
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#cancelForm').on('submit', function(e) {
                if (!confirm('Are you sure you want to cancel this reservation?')) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

@{
    ViewData["Title"] = "Page Not Found";
}

<div class="container py-5 text-center">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="bi bi-sign-dead-end text-muted" style="font-size: 4rem;"></i>
            </div>

            <h1 class="display-4 fw-bold mb-3">404</h1>
            <h2 class="h4 text-muted mb-4">Page Not Found</h2>
            
            <p class="mb-4">
                The page you are looking for might have been removed, had its name changed, or is temporarily unavailable.
            </p>

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">Go to Homepage</a>
                <a href="javascript:history.back()" class="btn btn-outline-secondary px-4">Go Back</a>
            </div>
        </div>
    </div>
</div>

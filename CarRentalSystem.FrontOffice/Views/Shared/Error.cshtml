@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5 text-center">
    <div class="card shadow border-danger mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
            </div>

            <h1 class="h2 mb-3 text-danger">Oops! Something went wrong.</h1>
            
            <p class="lead text-muted mb-4">
                @(Model.Message ?? "An unexpected error occurred while processing your request.")
            </p>

            @if (!string.IsNullOrEmpty(Model.Details) && Context.Request.Host.Host.Contains("localhost"))
            {
                <div class="text-start bg-light p-3 rounded mb-4 overflow-auto" style="max-height: 200px;">
                    <small class="text-danger font-monospace">@Model.Details</small>
                </div>
            }

            @if (Model.ShowRequestId)
            {
                <p class="text-muted small">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }

            <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4">Return Home</a>
                <a asp-controller="Vehicles" asp-action="Catalog" class="btn btn-outline-secondary px-4">Browse Vehicles</a>
            </div>
        </div>
    </div>
</div>

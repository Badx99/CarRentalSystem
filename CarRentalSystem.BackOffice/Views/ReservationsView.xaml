<UserControl x:Class="CarRentalSystem.BackOffice.Views.ReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Reservation Management" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="#C5CE18" Margin="0,0,0,20"/>

            <!-- Toolbar -->
            <Grid Grid.Row="1" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Grid Grid.Column="0" MaxWidth="350" HorizontalAlignment="Left">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" FontFamily="Montserrat"
                             Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="35" Padding="10,8,40,0"
                             VerticalContentAlignment="Center">
                        <TextBox.Background>
                            <SolidColorBrush Color="#2A2A5A"/>
                        </TextBox.Background>
                    </TextBox>
                    <TextBlock Text="ðŸ” Search customer or vehicle..." FontSize="11" 
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                               Foreground="#666" Margin="12,0,0,0" IsHitTestVisible="False"
                               Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=Inverse, FallbackValue=Visible}"/>
                </Grid>

                <!-- Status Filter -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0">
                    <TextBlock Text="Status:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox ItemsSource="{Binding StatusFilterOptions}"
                              SelectedItem="{Binding StatusFilter}"
                              Width="130" Height="35"
                              FontSize="13" Background="#2A2A5A" Foreground="White"/>
                </StackPanel>

                <!-- Refresh Button -->
                <Button Grid.Column="2" Content="ðŸ”„ Refresh" Command="{Binding RefreshCommand}"
                        Background="#28AEED" Foreground="White" FontWeight="Bold"
                        Padding="15,8" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1E9BD8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <!-- DataGrid -->
            <DataGrid Grid.Row="2" 
                      ItemsSource="{Binding Reservations}" 
                      SelectedItem="{Binding SelectedReservation}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderBrush="#462AD8"
                      BorderThickness="1"
                      RowBackground="#1B1448"
                      AlternatingRowBackground="#2A2A5A"
                      Foreground="White"
                      FontSize="12"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3A3A6A"
                      HeadersVisibility="Column"
                      Margin="0,0,20,0">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#462AD8"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderBrush" Value="#5A3AE8"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#462AD8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTemplateColumn Header="Vehicle" Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding VehicleBrand, Mode=OneWay}"/>
                                    <Run Text=" "/>
                                    <Run Text="{Binding VehicleModel, Mode=OneWay}"/>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Plate" Binding="{Binding VehicleLicensePlate}" Width="90"/>
                    <DataGridTextColumn Header="Start" Binding="{Binding StartDate, StringFormat=MM/dd/yy}" Width="80"/>
                    <DataGridTextColumn Header="End" Binding="{Binding EndDate, StringFormat=MM/dd/yy}" Width="80"/>
                    <DataGridTemplateColumn Header="Status" Width="90">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#666"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                    <Setter Property="Background" Value="#FF8C00"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                    <Setter Property="Background" Value="#28AEED"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="InProgress">
                                                    <Setter Property="Background" Value="#DA34AE"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                    <Setter Property="Background" Value="#32B743"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                    <Setter Property="Background" Value="#DA5234"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}" Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Amount" Binding="{Binding TotalAmount, StringFormat=C2}" Width="90"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Detail/Actions Panel -->
        <Border Grid.Column="1" Width="280" Background="#0D0935" CornerRadius="10" Padding="20"
                Visibility="{Binding HasSelection, Converter={StaticResource BoolToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="Reservation Details" FontSize="18" FontWeight="Bold" 
                               Foreground="#C5CE18" Margin="0,0,0,20"/>

                    <!-- Customer Info -->
                    <TextBlock Text="CUSTOMER" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedReservation.CustomerName}" 
                               Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedReservation.CustomerEmail}" 
                               Foreground="#AAA" FontSize="12" Margin="0,2,0,15"/>

                    <!-- Vehicle Info -->
                    <TextBlock Text="VEHICLE" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Foreground="White" FontSize="14" FontWeight="SemiBold">
                        <Run Text="{Binding SelectedReservation.VehicleBrand, Mode=OneWay}"/>
                        <Run Text=" "/>
                        <Run Text="{Binding SelectedReservation.VehicleModel, Mode=OneWay}"/>
                    </TextBlock>
                    <TextBlock Text="{Binding SelectedReservation.VehicleLicensePlate}" 
                               Foreground="#AAA" FontSize="12" Margin="0,2,0,15"/>

                    <!-- Dates -->
                    <TextBlock Text="DATES" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Start" Foreground="#AAA" FontSize="10"/>
                            <TextBlock Text="{Binding SelectedReservation.StartDate, StringFormat='MMM dd\, yyyy'}" 
                                       Foreground="White" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="End" Foreground="#AAA" FontSize="10"/>
                            <TextBlock Text="{Binding SelectedReservation.EndDate, StringFormat='MMM dd\, yyyy'}" 
                                       Foreground="White" FontSize="13"/>
                        </StackPanel>
                    </Grid>

                    <!-- Amount -->
                    <TextBlock Text="TOTAL AMOUNT" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SelectedReservation.TotalAmount, StringFormat=C2}" 
                               Foreground="#32B743" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>

                    <!-- Status -->
                    <TextBlock Text="STATUS" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Border CornerRadius="5" Padding="10,6" HorizontalAlignment="Left" Margin="0,0,0,25">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#666"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedReservation.Status}" Value="Pending">
                                        <Setter Property="Background" Value="#FF8C00"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedReservation.Status}" Value="Confirmed">
                                        <Setter Property="Background" Value="#28AEED"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedReservation.Status}" Value="InProgress">
                                        <Setter Property="Background" Value="#DA34AE"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedReservation.Status}" Value="Completed">
                                        <Setter Property="Background" Value="#32B743"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding SelectedReservation.Status}" Value="Cancelled">
                                        <Setter Property="Background" Value="#DA5234"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{Binding SelectedReservation.Status}" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Action Buttons -->
                    <TextBlock Text="ACTIONS" Foreground="#888" FontSize="10" FontWeight="Bold" Margin="0,0,0,10"/>
                    <StackPanel>
                        <!-- Confirm Button -->
                        <Button Content="âœ“ Confirm Reservation" 
                                Command="{Binding ConfirmCommand}"
                                CommandParameter="{Binding SelectedReservation}"
                                Visibility="{Binding CanShowConfirm, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#32B743" Foreground="White" FontWeight="Bold"
                                Padding="10,10" Margin="0,0,0,8" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#28A73D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Start Rental Button -->
                        <Button Content="â–¶ Start Rental" 
                                Command="{Binding StartRentalCommand}"
                                CommandParameter="{Binding SelectedReservation}"
                                Visibility="{Binding CanShowStart, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#28AEED" Foreground="White" FontWeight="Bold"
                                Padding="10,10" Margin="0,0,0,8" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#1E9BD8"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Complete Button -->
                        <Button Content="â–  Complete Rental" 
                                Command="{Binding CompleteCommand}"
                                CommandParameter="{Binding SelectedReservation}"
                                Visibility="{Binding CanShowComplete, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#DA34AE" Foreground="White" FontWeight="Bold"
                                Padding="10,10" Margin="0,0,0,8" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#C52D9E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Download Receipt Button -->
                        <Button Content="ðŸ“„ Download Receipt" 
                                Command="{Binding DownloadReceiptCommand}"
                                CommandParameter="{Binding SelectedReservation}"
                                Visibility="{Binding CanShowReceipt, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#462AD8" Foreground="White" FontWeight="Bold"
                                Padding="10,10" Margin="0,0,0,8" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#3A24C2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Cancel Button -->
                        <Button Content="âœ• Cancel Reservation" 
                                Command="{Binding CancelCommand}"
                                CommandParameter="{Binding SelectedReservation}"
                                Visibility="{Binding CanShowCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="#DA5234" Foreground="White" FontWeight="Bold"
                                Padding="10,10" Margin="0,0,0,8" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#C62D2D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Processing..." FontSize="18" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

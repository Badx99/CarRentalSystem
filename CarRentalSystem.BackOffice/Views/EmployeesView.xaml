<UserControl x:Class="CarRentalSystem.BackOffice.Views.EmployeesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="900">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0" Text="Employee Management" 
                       FontSize="28" FontWeight="Bold" 
                       Foreground="#C5CE18" Margin="0,0,0,20"/>

            <!-- Toolbar -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
                <Button Content="âž• Add Employee" Command="{Binding AddCommand}"
                        Background="#32B743" Foreground="White" FontWeight="Bold"
                        Padding="15,8" Margin="0,0,10,0" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#28A73D"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button Content="ðŸ”„ Refresh" Command="{Binding LoadCommand}"
                        Background="#28AEED" Foreground="White" FontWeight="Bold"
                        Padding="15,8" Cursor="Hand" BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1E9BD8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <!-- DataGrid -->
            <DataGrid Grid.Row="2" 
                      ItemsSource="{Binding Employees}" 
                      SelectedItem="{Binding SelectedEmployee}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      Background="Transparent"
                      BorderBrush="#462AD8"
                      BorderThickness="1"
                      RowBackground="#1B1448"
                      AlternatingRowBackground="#2A2A5A"
                      Foreground="White"
                      FontSize="13"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#3A3A6A"
                      HeadersVisibility="Column"
                      Margin="0,0,20,0">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#462AD8"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderBrush" Value="#5A3AE8"/>
                        <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#462AD8"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#462AD8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Emp #" Binding="{Binding EmployeeNumber}" Width="80"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Salary" Binding="{Binding Salary, StringFormat=C2}" Width="100"/>
                    <DataGridTextColumn Header="Hire Date" Binding="{Binding HireDate, StringFormat=d}" Width="100"/>
                    <DataGridTemplateColumn Header="Status" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="3" Padding="6,2" HorizontalAlignment="Left">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#32B743"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter Property="Background" Value="#888"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Foreground="White" FontSize="11">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="Active"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                        <Setter Property="Text" Value="Inactive"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="âœï¸" 
                                            Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Background="Yellow" Foreground="Black" 
                                            BorderThickness="0" Cursor="Hand" Padding="8,4"
                                            ToolTip="Edit" FontSize="16"/>
                                    <Button Content="ðŸ—‘ï¸" 
                                            Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            Background="Red" Foreground="Black" 
                                            BorderThickness="0" Cursor="Hand" Padding="8,4"
                                            ToolTip="Delete" FontSize="16"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Add/Edit Form Panel -->
        <Border Grid.Column="1" Width="320" Background="#0D0935" CornerRadius="10" Padding="20"
                Visibility="{Binding IsEditing, Converter={StaticResource BoolToVisibilityConverter}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Form Header -->
                    <TextBlock Text="{Binding FormTitle}" FontSize="20" FontWeight="Bold" 
                               Foreground="#C5CE18" Margin="0,0,0,20"/>

                    <!-- First Name -->
                    <TextBlock Text="First Name *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="32" Padding="8,6" Margin="0,0,0,15">
                        <TextBox.Background>
                            <SolidColorBrush Color="#1A1650"/>
                        </TextBox.Background>
                    </TextBox>

                    <!-- Last Name -->
                    <TextBlock Text="Last Name *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="32" Padding="8,6" Margin="0,0,0,15">
                        <TextBox.Background>
                            <SolidColorBrush Color="#1A1650"/>
                        </TextBox.Background>
                    </TextBox>

                    <!-- Email -->
                    <TextBlock Text="Email *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="32" Padding="8,6" Margin="0,0,0,15">
                        <TextBox.Background>
                            <SolidColorBrush Color="#1A1650"/>
                        </TextBox.Background>
                    </TextBox>

                    <StackPanel Visibility="{Binding IsAddMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="Password *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="EmployeePasswordBox"
                                     FontSize="13" Foreground="White"
                                     BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                                     Height="32" Padding="8,6" Margin="0,0,0,15"
                                     PasswordChanged="EmployeePasswordBox_PasswordChanged">
                            <PasswordBox.Background>
                                <SolidColorBrush Color="#1A1650"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                    </StackPanel>

                    <!-- Employee Number -->
                    <TextBlock Text="Employee Number *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding EmployeeNumber, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="32" Padding="8,6" Margin="0,0,0,15">
                        <TextBox.Background>
                            <SolidColorBrush Color="#1A1650"/>
                        </TextBox.Background>
                    </TextBox>

                    <!-- Salary -->
                    <TextBlock Text="Salary *" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Salary, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="13" Foreground="White" CaretBrush="LightGray"
                             BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                             Height="32" Padding="8,6" Margin="0,0,0,15">
                        <TextBox.Background>
                            <SolidColorBrush Color="#1A1650"/>
                        </TextBox.Background>
                    </TextBox>

                    <!-- Hire Date -->
                    <TextBlock Text="Hire Date" Foreground="DarkGray" FontSize="12" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding HireDate}"
                                FontSize="13" Foreground="Black"
                                BorderBrush="DarkGray" BorderThickness="0,0,0,2"
                                Height="32" Margin="0,0,0,15"/>

                    <!-- Is Active (edit mode only) -->
                    <CheckBox Content="Active" IsChecked="{Binding IsActive}"
                              Foreground="White" FontSize="13" Margin="0,0,0,15"
                              Visibility="{Binding IsAddMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="#FF6B6B" FontSize="11" TextWrapping="Wrap"
                               Margin="0,0,0,15"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                    <!-- Form Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                        <Button Content="Cancel" Command="{Binding CancelCommand}"
                                Background="#666" Foreground="White" FontWeight="Bold"
                                Padding="20,10" Margin="0,0,10,0" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#555"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Save" Command="{Binding SaveCommand}"
                                Background="#32B743" Foreground="White" FontWeight="Bold"
                                Padding="25,10" Cursor="Hand" BorderThickness="0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="{TemplateBinding Background}" 
                                            CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#28A73D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.ColumnSpan="2" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="â³" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="Loading..." FontSize="18" Foreground="White"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>

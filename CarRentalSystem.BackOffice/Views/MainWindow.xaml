<Window x:Class="CarRentalSystem.BackOffice.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystem.BackOffice.Views"
        xmlns:vm="clr-namespace:CarRentalSystem.BackOffice.ViewModels"
        mc:Ignorable="d"
        Title="Car Rental System - BackOffice" 
        Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- DataTemplates for view switching -->
        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <local:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:VehiclesViewModel}">
            <local:VehiclesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReservationsViewModel}">
            <local:ReservationsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:CustomersViewModel}">
            <local:CustomersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:VehicleTypesViewModel}">
            <local:VehicleTypesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:EmployeesViewModel}">
            <local:EmployeesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentsViewModel}">
            <local:PaymentsView/>
        </DataTemplate>
    </Window.Resources>

    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#462AD8" Offset="0"/>
                <GradientStop Color="#DA34AE" Offset="0.75"/>
                <GradientStop Color="#8A16C1" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.BorderThickness>2</Border.BorderThickness>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0" Background="#0A0830">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🚗 Car Rental System - BackOffice" 
                           Foreground="#C5CE18" FontSize="14" FontWeight="SemiBold"
                           VerticalAlignment="Center" Margin="15,0,0,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button x:Name="btnMinimize" Content="−" Click="btnMinimize_Click"
                            Width="30" Height="30" BorderThickness="0" Cursor="Hand"
                            Foreground="White" FontSize="18" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#28AEED" CornerRadius="15" Width="25" Height="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose" Content="✕" Click="btnClose_Click"
                            Width="30" Height="30" BorderThickness="0" Cursor="Hand" Margin="5,0,0,0"
                            Foreground="White" FontSize="12" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="#DA5234" CornerRadius="15" Width="25" Height="25">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar -->
                <Border Grid.Column="0" Background="#0D0935" CornerRadius="0,0,0,10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- User Info -->
                        <StackPanel Grid.Row="0" Margin="15,20,15,30">
                            <Ellipse Width="60" Height="60" HorizontalAlignment="Center">
                                <Ellipse.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#462AD8" Offset="0"/>
                                        <GradientStop Color="#DA34AE" Offset="1"/>
                                    </LinearGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <TextBlock Text="{Binding UserFullName, FallbackValue='User Name'}" 
                                       Foreground="White" FontSize="14" FontWeight="SemiBold"
                                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Text="{Binding UserRole, FallbackValue='Role'}" 
                                       Foreground="#888" FontSize="12"
                                       HorizontalAlignment="Center" Margin="0,3,0,0"/>
                        </StackPanel>

                        <!-- Navigation Menu -->
                        <StackPanel Grid.Row="1" Margin="10,0">
                            <Button Command="{Binding NavigateToDashboardCommand}" Cursor="Hand" Margin="0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📊" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Dashboard" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Command="{Binding NavigateToVehiclesCommand}" Cursor="Hand" Margin="0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🚗" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Vehicles" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Command="{Binding NavigateToReservationsCommand}" Cursor="Hand" Margin="0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📅" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Reservations" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Command="{Binding NavigateToCustomersCommand}" Cursor="Hand" Margin="0,5">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="👥" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Customers" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <!-- Vehicle Types (Admin only) -->
                            <Button Command="{Binding NavigateToVehicleTypesCommand}" Cursor="Hand" Margin="0,5"
                                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="📝" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Vehicle Types" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <!-- Employees (Admin only) -->
                            <Button Command="{Binding NavigateToEmployeesCommand}" Cursor="Hand" Margin="0,5"
                                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="👔" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Employees" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <!-- Payments (Admin only) -->
                            <Button Command="{Binding NavigateToPaymentsCommand}" Cursor="Hand" Margin="0,5"
                                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="Transparent" CornerRadius="8" Padding="15,12">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="💳" FontSize="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Payments" Foreground="White" FontSize="14" 
                                                           Margin="12,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#1A1650"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Grid.Row="2" Command="{Binding LogoutCommand}" Cursor="Hand" Margin="15,10,15,20">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border" Background="#DA5234" CornerRadius="8" Padding="15,12">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="🚪" FontSize="16" VerticalAlignment="Center"/>
                                            <TextBlock Text="Logout" Foreground="White" FontSize="14" FontWeight="SemiBold"
                                                       Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#C62D2D"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}" Margin="0"/>
            </Grid>
        </Grid>
    </Border>
</Window>

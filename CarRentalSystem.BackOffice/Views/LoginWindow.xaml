<Window x:Class="CarRentalSystem.BackOffice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRentalSystem.BackOffice.Views"
        mc:Ignorable="d"
        Title="Car Rental System - Login" 
        Height="500" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Border CornerRadius="12">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0"/>
                <GradientStop Color="#1B1448" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#462AD8" Offset="0"/>
                <GradientStop Color="#DA34AE" Offset="0.75"/>
                <GradientStop Color="#8A16C1" Offset="1"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.BorderThickness>2</Border.BorderThickness>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="🚗 Car Rental System" 
                           Foreground="#888" FontSize="12"
                           VerticalAlignment="Center" Margin="15,0,0,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,10,0">
                    <Button x:Name="btnMinimize" Content="−" Click="btnMinimize_Click"
                            Width="25" Height="25" BorderThickness="0" Cursor="Hand"
                            Foreground="White" FontSize="16" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#28AEED" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose" Content="✕" Click="btnClose_Click"
                            Width="25" Height="25" BorderThickness="0" Cursor="Hand" Margin="5,0,0,0"
                            Foreground="White" FontSize="11" FontWeight="Bold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="#DA5234" CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#C62D2D"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Login Form -->
            <StackPanel Grid.Row="1" Width="280" VerticalAlignment="Center" Margin="0,0,0,30">
                
                <!-- Logo/Icon -->
                <Ellipse Width="80" Height="80" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Ellipse.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#462AD8" Offset="0"/>
                            <GradientStop Color="#DA34AE" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Title -->
                <TextBlock Text="BackOffice Login"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <!-- Email Field -->
                <TextBlock Text="Email"
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="14"
                         FontFamily="Montserrat"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2"
                         Height="35"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="5,0,0,0">
                    <TextBox.Background>
                        <SolidColorBrush Color="#1A1650"/>
                    </TextBox.Background>
                </TextBox>

                <!-- Password Field -->
                <TextBlock Text="Password"
                           Foreground="DarkGray"
                           FontSize="12"
                           FontWeight="Medium"
                           FontFamily="Montserrat"
                           Margin="0,20,0,0"/>
                <PasswordBox x:Name="txtPassword"
                             FontSize="14"
                             FontFamily="Montserrat"
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="35"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="5,0,0,0"
                             PasswordChanged="txtPassword_PasswordChanged">
                    <PasswordBox.Background>
                        <SolidColorBrush Color="#1A1650"/>
                    </PasswordBox.Background>
                </PasswordBox>

                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FF6B6B"
                           FontSize="12"
                           FontFamily="Montserrat"
                           TextWrapping="Wrap"
                           Margin="0,15,0,0"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}, FallbackValue=Collapsed}"/>

                <!-- Login Button -->
                <Button Command="{Binding LoginCommand}"
                        IsDefault="True"
                        Cursor="Hand"
                        Margin="0,25,0,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="#462AD8" CornerRadius="20" 
                                    Height="45" Width="200">
                                <Grid>
                                    <TextBlock Text="LOG IN" 
                                               Foreground="White" FontSize="14" FontWeight="Bold"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibilityConverter}, FallbackValue=Visible}"/>
                                    <TextBlock Text="Loading..." 
                                               Foreground="White" FontSize="14"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#28AEED"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Background" Value="#333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Footer Text -->
                <TextBlock Text="Admin and Employee access only"
                           Foreground="#666"
                           FontSize="11"
                           FontFamily="Montserrat"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>

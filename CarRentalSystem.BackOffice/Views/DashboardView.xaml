<UserControl x:Class="CarRentalSystem.BackOffice.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,30">
            <TextBlock Text="Dashboard" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="#C5CE18"
                       FontFamily="Montserrat"/>
            <TextBlock Text="Welcome to Car Rental System BackOffice" 
                       FontSize="14" 
                       Foreground="DarkGray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Stats Cards Row 1 -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,20">
            <!-- Total Vehicles -->
            <Border CornerRadius="10" Background="#30A2B5" Margin="0,0,15,15" Padding="20">
                <StackPanel>
                    <TextBlock Text="Total Vehicles" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.TotalVehicles, FallbackValue=0}" 
                               FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Available: " FontSize="12" Foreground="#AAFFFFFF"/>
                        <TextBlock Text="{Binding Stats.AvailableVehicles, FallbackValue=0}" FontSize="12" Foreground="#AAFFFFFF"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Total Reservations -->
            <Border CornerRadius="10" Background="#B4C821" Margin="0,0,15,15" Padding="20">
                <StackPanel>
                    <TextBlock Text="Reservations" FontSize="14" Foreground="#1B1448" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.TotalReservations, FallbackValue=0}" 
                               FontSize="36" FontWeight="Bold" Foreground="#1B1448" Margin="0,10,0,0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Active: " FontSize="12" Foreground="#AA1B1448"/>
                        <TextBlock Text="{Binding Stats.ActiveReservations, FallbackValue=0}" FontSize="12" Foreground="#AA1B1448"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Total Customers -->
            <Border CornerRadius="10" Background="#32B743" Margin="0,0,15,15" Padding="20">
                <StackPanel>
                    <TextBlock Text="Customers" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.TotalCustomers, FallbackValue=0}" 
                               FontSize="36" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Revenue -->
            <Border CornerRadius="10" Background="#DA34AE" Margin="0,0,0,15" Padding="20">
                <StackPanel>
                    <TextBlock Text="Total Revenue" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,10,0,0">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="${0:N2}">
                                <Binding Path="Stats.TotalRevenueThisMonth" FallbackValue="0"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Pending: $" FontSize="12" Foreground="#AAFFFFFF"/>
                        <TextBlock Text="{Binding Stats.PendingPayments, StringFormat=N2, FallbackValue=0}" FontSize="12" Foreground="#AAFFFFFF"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Stats Cards Row 2 -->
        <UniformGrid Grid.Row="2" Columns="4" VerticalAlignment="Top">
            <!-- Pending Reservations -->
            <Border CornerRadius="10" Background="#462AD8" Margin="0,0,15,0" Padding="20" Height="100">
                <StackPanel>
                    <TextBlock Text="Pending" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.PendingReservations, FallbackValue=0}" 
                               FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Confirmed Reservations -->
            <Border CornerRadius="10" Background="#28AEED" Margin="0,0,15,0" Padding="20" Height="100">
                <StackPanel>
                    <TextBlock Text="Confirmed" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.ConfirmedReservationsThisMonth, FallbackValue=0}" 
                               FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Rented Vehicles -->
            <Border CornerRadius="10" Background="#FF8C00" Margin="0,0,15,0" Padding="20" Height="100">
                <StackPanel>
                    <TextBlock Text="Rented" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.RentedVehicles, FallbackValue=0}" 
                               FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>

            <!-- Completed -->
            <Border CornerRadius="10" Background="#8A16C1" Margin="0,0,0,0" Padding="20" Height="100">
                <StackPanel>
                    <TextBlock Text="Completed" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Stats.CompletedReservationsThisMonth, FallbackValue=0}" 
                               FontSize="28" FontWeight="Bold" Foreground="White" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="3" Background="#80000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
            <TextBlock Text="Loading..." FontSize="18" Foreground="White" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
